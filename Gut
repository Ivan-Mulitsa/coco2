  }

  button {
    margin: 6px 0;
    padding: 8px 14px;
    font-size: 16px;
    background-color: #1a4d8f;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  button:hover {
    background-color: #163f73;
  }

  #wynik {
    margin-top: 20px;
    border: 2px solid #1a4d8f;
    padding: 12px;
    width: 520px;
    background-color: #ffffff;
    font-size: 18px;
  }
