 var D1_bil=prompt("Data1=","");
 var D2_bil=prompt("Data2=","");
 var sekund;
 var a=parseFloat(D1_bil);
 var b=parseFloat(D2_bil);
 sekund=(a-b)*24*60*60;
 document.write("Ilość sekund między dniami "+a+" i "+b+" = "+sekund+"<br>");
 function okno_zamknij_bilyi()
